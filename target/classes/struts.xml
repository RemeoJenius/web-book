<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE struts PUBLIC   "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" 
"http://struts.apache.org/dtds/struts-2.3.dtd">
  <struts>
  	<package name="default" namespace="/" extends="json-default">
  		<default-action-ref name="index"></default-action-ref>
  		<action name="index" class="com.jenius.web.action.MainAction">
  			<result>/index.jsp</result>
  		</action>
  		<action name="login_*" class="com.jenius.web.action.LoginAction" method="{1}">
  			<result name="success">/index.jsp</result>
  			<result name="error">/login.jsp</result>
  		</action>
  		<action name="logout" class="com.jenius.web.action.LogoutAction">
  			<result>/index.jsp</result>
  		</action>
  		<action name="delete" class="com.jenius.web.action.DeleteAction" method="delete">
  			<result name="delete" type="json">
  				<param name="includeProperties">
					result
				</param>
  			</result> 
  		</action>
  		<action name="buy" class="com.jenius.web.action.BuyAction" method="buyProduct">
  			<result name="buyProduct" type="json">
  				<param name="includeProperties">
					result
				</param>
  			</result> 
  		</action>
  		<action name="product_list" class="com.jenius.web.action.ProductList" method="list">
  			<result name="list">/product_list.jsp</result> 
  		</action>
  	</package>
  </struts> 